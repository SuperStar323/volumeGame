{
  "name": "@pricegame/contract",
  "description": "Setup for writing Solidity smart contracts",
  "version": "1.0.0",
  "devDependencies": {
    "@codechecks/client": "^0.1.11",
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/abstract-signer": "^5.4.1",
    "@ethersproject/bignumber": "^5.4.1",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/providers": "^5.4.4",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@pricegame/shared": "*",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.5",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.1",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "private": true,
  "resolutions": {
    "@solidity-parser/parser": "^0.13.2"
  },
  "scripts": {
    "localhost": "npx hardhat node",
    "bot": "npx hardhat run --network localhost scripts/deploy.ts && npx hardhat run --network localhost scripts/bot.ts",
    "bot:testnet": "npx hardhat run --network testnet scripts/deploy.ts && npx hardhat run --network testnet scripts/bot.ts",
    "clean": "hardhat clean",
    "compile": "rm -rf ./abi && hardhat compile",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "test": "hardhat test",
    "develop": "yarn typechain && hardhat watch ci",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "start": "yarn typechain && yarn test"
  },
  "dependencies": {
    "await-timeout": "^1.1.1",
    "chai-as-promised": "^7.1.1",
    "hardhat-watcher": "^2.1.1",
    "nodemon": "^2.0.12",
    "p-any": "^4.0.0",
    "p-locate": "^6.0.0"
  }
}
